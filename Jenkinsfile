pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo '---------------------------------------------------'
                mvn compile
                echo '---------------------------------------------------'
            }
        }
        stage('Test') { 
            steps {
                echo '---------------------------------------------------'
                mvn test
                echo '---------------------------------------------------'
            }
        }
        stage('Deploy') { 
            steps {
                echo '---------------------------------------------------'
                mvn install
                echo '---------------------------------------------------'
            }
        }
    }
}
