pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                echo '---------------------------------------------------'
                sh 'mvn clean compile'
                echo '---------------------------------------------------'
            }
        }
        stage('Test') { 
            steps {
                echo '---------------------------------------------------'
                sh 'mvn test'
                echo '---------------------------------------------------'
            }
        }
        stage('Deploy') { 
            steps {
                echo '---------------------------------------------------'
                sh 'mvn install'
                echo '---------------------------------------------------'
            }
        }
    }
}
